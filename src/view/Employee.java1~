    private void btnSearchActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSearchActionPerformed
        // TODO add your handling code here:
        if(txtFirstName.getText().equals("")){
            JOptionPane.showMessageDialog(rootPane, "Please Enter First Name");
        }
        else{
            String empFirstName=txtFirstName.getText();
            emp=controller.searchEmployeeInfo(empFirstName);
            if(emp!=null){
                txtLastName.setText(emp.getEmpLasttName());
                txtPhnNum.setText(emp.getPhnNum());
                txtAddress.setText(emp.getAddress());
            }
            else{
                JOptionPane.showMessageDialog(null, "No Data Found");
            }
        }
    }//GEN-LAST:event_btnSearchActionPerformed

    private void btnAddActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAddActionPerformed
        // TODO add your handling code here:

        String empFirstName=txtFirstName.getText();
        String empLastName=txtLastName.getText();
        String phnNUm=txtPhnNum.getText();
        String address=txtAddress.getText();
        
        
        EmployeeInfo emp=new EmployeeInfo(empFirstName, empLastName, phnNUm, address);

            controller.insertEmployee(emp);
    }//GEN-LAST:event_btnAddActionPerformed

    private void btnUpdateActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnUpdateActionPerformed
        // TODO add your handling code here:
        emp.setEmpFirstName(txtFirstName.getText());
        emp.setEmpLasttName(txtLastName.getText());
        emp.setPhnNum(txtPhnNum.getText());
        emp.setAddress(txtAddress.getText());
        controller.updateEmployee(emp);
    }//GEN-LAST:event_btnUpdateActionPerformed

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnClearActionPerformed
        // TODO add your handling code here:
        txtFirstName.setText("");
        txtLastName.setText("");
        txtPhnNum.setText("");
        txtAddress.setText("");
    }//GEN-LAST:event_btnClearActionPerformed

