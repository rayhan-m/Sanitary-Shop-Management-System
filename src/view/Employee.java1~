    private void btnBackActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnBackActionPerformed
        // TODO add your handling code here:
        EmpPayment empp=new EmpPayment();
        empp.setVisible(true);
        this.dispose();
    }//GEN-LAST:event_btnBackActionPerformed

    private void txtPhnNumKeyTyped(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_txtPhnNumKeyTyped
        // TODO add your handling code here:
        char sal=evt.getKeyChar();
        if(!(Character.isDigit(sal))
                || (sal==KeyEvent.VK_BACK_SPACE)
                || (sal==KeyEvent.VK_DELETE)){
        
                evt.consume();
        }
    }//GEN-LAST:event_txtPhnNumKeyTyped


