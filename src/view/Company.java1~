    private void btnSearchActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSearchActionPerformed
        
        if(txtCompanyName.getText().equals("")){
             JOptionPane.showMessageDialog(null, "Please Enter Company Name");
        }else{
        
        String companyName=txtCompanyName.getText();
        
            comInfo=controller.searchCompanyInfo(companyName);
            if(comInfo!=null){
            txtEmail.setText(comInfo.getEmail());
            txtWebsite.setText(comInfo.getWebsite());
            }
            else{
                JOptionPane.showMessageDialog(null, "No Data Found");
          }
        }
    }//GEN-LAST:event_btnSearchActionPerformed

    private void btnAddActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAddActionPerformed
        // TODO add your handling code here:
        if(txtCompanyName.getText().equals("")){
            JOptionPane.showMessageDialog(rootPane, "Please Insert Company Name");
        }
        else if(txtEmail.getText().equals("")){
            JOptionPane.showMessageDialog(rootPane, "Please Insert Company Email");
        }
        else if(txtWebsite.getText().equals("")){
            JOptionPane.showMessageDialog(rootPane, "Please Insert Company Website");
        }else{
        try {
            String companyName = txtCompanyName.getText();
            String email  = txtEmail.getText();
            String website = txtWebsite.getText();

            CompanyInfo comInfo = new CompanyInfo(companyName, email, website);
            controller.insertCompany(comInfo);
        } catch (Exception ex) {
            Logger.getLogger(Products.class.getName()).log(Level.SEVERE, null, ex);
        }}
    }//GEN-LAST:event_btnAddActionPerformed

    private void btnUpdateActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnUpdateActionPerformed
        // TODO add your handling code here:
        if(txtCompanyName.getText().equals("")){
            JOptionPane.showMessageDialog(rootPane, "Please Insert Company Name");
        }else{
        comInfo.setCompanyName(txtCompanyName.getText());
        comInfo.setEmail(txtEmail.getText());
        comInfo.setWebsite(txtWebsite.getText());
        controller.updateCompany(comInfo);
        }
    }//GEN-LAST:event_btnUpdateActionPerformed

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnClearActionPerformed
        // TODO add your handling code here:
        txtCompanyName.setText("");
        txtEmail.setText("");
        txtWebsite.setText("");
    }//GEN-LAST:event_btnClearActionPerformed

    private void btnCloseActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnCloseActionPerformed
        // TODO add your handling code here:
        this.dispose();
        prod.setVisible(true);
    }//GEN-LAST:event_btnCloseActionPerformed

    private void btnShowActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnShowActionPerformed
        // TODO add your handling code here:
        ShowCompany showCom=new ShowCompany();
        showCom.setVisible(true);
        this.dispose();
    }//GEN-LAST:event_btnShowActionPerformed


