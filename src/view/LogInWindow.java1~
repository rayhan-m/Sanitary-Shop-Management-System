    private void btnLogInActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnLogInActionPerformed

        if (username.equals(txtUserName.getText())) {
            if (pass.equals(txtPassword.getText())) {
                a=0;
                HomeWindow homeWin=new HomeWindow();
                this.dispose();
                homeWin.homeWin();
            }else if(txtPassword.getText().equals("")){
                    JOptionPane.showMessageDialog(rootPane, "Please Enter Password");
            }else{
                JOptionPane.showMessageDialog(null,"Wrong Password !");
            }
        }
        else if (uname.equals(txtUserName.getText())) {
                if (password.equals(txtPassword.getText())) {
                    a=1;
                    HomeWindow homeWin=new HomeWindow();
                    this.dispose();
                    homeWin.homeWin();
                }else if(txtPassword.getText().equals("")){
                    JOptionPane.showMessageDialog(rootPane, "Please Enter Password");
                }else{
                    System.out.println("Wrong pass");
                    JOptionPane.showMessageDialog(rootPane, "Wrong Password !");
                }
            }
        
                else if(txtUserName.getText().equals("")){
                        JOptionPane.showMessageDialog(null,"Please Enter user name");
                    }else{
                        JOptionPane.showMessageDialog(null,"User not found");
                    }
        
    }//GEN-LAST:event_btnLogInActionPerformed

